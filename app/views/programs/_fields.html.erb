<%= semantic_form_for program do |form| %>
  <%= form.inputs do %>
    <%= form.input :site %>
    <%= form.input :program_type %>
    <%= form.input :start_date, :as => :datepicker %>
    <%= form.input :end_date, :as => :datepicker %>
    <%= form.input :food_budget, :input_html => { :size => 6 } %>
    <%= form.input :active, :hint => "Active programs will be displayed in default lists and displays" %>
  <% end %>
  <%= form.buttons %>
<% end %>
